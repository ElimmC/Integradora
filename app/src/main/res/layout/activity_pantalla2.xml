<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="e.fimo2.integradora.pantalla2">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:id="@+id/linv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/radioGroup2"
            android:layout_marginTop="12dp"
            android:visibility="visible"
            tools:ignore="UnknownId">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/ca"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/ca"
                android:layout_marginEnd="11dp"
                android:layout_marginRight="11dp"
                android:layout_marginTop="26dp"
                android:text="Seleccione sus Actividades" />

            <CheckBox
                android:id="@+id/of"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView8"
                android:layout_marginLeft="23dp"
                android:layout_marginStart="23dp"
                android:layout_marginTop="25dp"
                android:text="Oficina" />

            <CheckBox
                android:id="@+id/ca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/dep"
                android:layout_alignBottom="@+id/dep"
                android:layout_centerHorizontal="true"
                android:text="Casa" />

            <CheckBox
                android:id="@+id/esc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/of"
                android:layout_centerHorizontal="true"
                android:text="Escuela" />

            <CheckBox
                android:id="@+id/dep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/of"
                android:layout_alignStart="@+id/of"
                android:layout_below="@+id/of"
                android:layout_marginTop="45dp"
                android:text="Deporte" />

        </RelativeLayout>

        <Button
            android:id="@+id/env2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="33dp"
            android:onClick="ennnn"
            android:text="Siguiente" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
